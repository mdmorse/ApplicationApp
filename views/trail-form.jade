extends layout

block content
    .logo-bar 
            #image-slide
                img#hiker-image(src ='/images/bike-hike.svg')        
            .img-wrapper
                h1 
                    span#logo-slide Trail Log     
                img#mountain-div(src='/images/mountains.jpg')
    .btn-group.btn-group-justified       
            a.btn.btn-default(href= '/') Home
                .glyphicon.glyphicon-home
            a.btn.btn-default(href= '/trail-form') Add a Trail
            a.btn.btn-default(href= '/trails') All Trails 
    .container    
        form#add-form(action="/trail", method="post")
            .form-group
                input.form-control(name="name", type="text", placeholder="Name of Trail")
            .form-group
                textarea.form-control(name="description",rows="5", placeholder="Description")
            .form-group
                textarea.form-control(name="location", type="text", placeholder="City and State")
            .form-group
                input.btn.btn-success(type="submit")    
                a(href='/trails') 
                    .btn.btn-warning View Trails
        

            
