extends layout

block content
    .logo-bar    
        #logout-btn 
            a(href="/logout")
                .btn.btn-default.pull-right logout
            .btn-group.pull-right#mobile-menu
                button.btn.btn-default.dropdown-toggle(data-toggle="dropdown")
                    .glyphicon.glyphicon-align-justify
                ul.dropdown-menu
                    li
                        a(href="/index") home
                        a(href="/trail-form") Add Trail
                        a(href="/trails") View Trails
                        a(href="/logout") Logout         
        .img-wrapper
            h1 
                span#logo-slide Trail Log
            h1
                span#info-slide Add A Trail     
            img#mountain-div(src='/images/mountains.jpg')

    .btn-group.btn-group-justified       
        a.btn.btn-default(href= '/') Home
            .glyphicon.glyphicon-home
        a.btn.btn-default(href= '/trail-form') Add a Trail
        a.btn.btn-default(href= '/trails') All Trails
    .container
        h2= singleTrail.name
        h3= singleTrail.location 
        p= singleTrail.description
                    a.btn.fb-share-button#fb-btn(data-href='http://trail-log.herokuapp.com/trails/single-trail/#{singleTrail._id}', data-width='200', data-type='button') 
        h2= singleTrail.region
        .row
            .col-md-8
                .row
            .col-md-8
                #map-nav-container
                    a(href = "/trails/delete/#{singleTrail._id}")
                                .btn.btn-danger Remove
                    a(href = "/trails")
                                .btn.btn-info Back to List
                    a.btn.btn-warning#view-directions View Directions
                    
                    b.btn.btn-default.map-drop Start: 
                                      select#start
                                        option(value='Aroura, Co') Auroura Co
                                        option(value='Boulder, Co') Boulder Co
                                        option(value='Colorado Springs, Co') Co Springs
                                        option(value='Denver, Co') Denver Co
                                        option(value='Evergreen, Co') Evergreen Co
                                        option(value='Fort Collins, Co') Fort Collins Co
                                        option(value='Littleton, Co') Littleton Co
                    b.btn.btn-default.map-drop End: 
                                      select#end(onchange='calcRoute();')
                                        option(value= singleTrail.name +',' + singleTrail.location)= singleTrail.name
                .map-container
                    #panel  
                    #map-canvas
            .col-md-4        
                #directions-panel        
        .footer
       
                    